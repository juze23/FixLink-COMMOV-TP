<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_grey"
    tools:context=".IssueDetailFragment">

    <ProgressBar
        android:id="@+id/loadingProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/contentScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/issueDetailRootLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/issueTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Issue Title"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:layout_marginBottom="4dp"/>

                    <TextView
                        android:id="@+id/issueReporter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reporter Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="16dp"/>

                    <ImageView
                        android:id="@+id/issueImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/placeholder_printer_image"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info_outline"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/darker_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Description:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/issueDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Issue description"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_location_outline"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/darker_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/issueLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person_outline"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/darker_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Responsible Technician:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/responsibleTechnician"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Technician Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginBottom="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar_outline"
                            android:layout_marginEnd="8dp"
                            app:tint="@android:color/darker_gray" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date:"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/issueDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status Information"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="start"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/statusMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Priority"
                            android:textColor="@color/black"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/statusPending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Status"
                            android:textColor="@color/black"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"
                            android:layout_marginEnd="8dp"/>

                        <TextView
                            android:id="@+id/statusActive"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Equipment"
                            android:textColor="@color/black"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:paddingBottom="4dp"
                            android:textSize="12sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/actionButtonsLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="16dp">

                        <Button
                            android:id="@+id/startTaskButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Task"
                            android:visibility="gone"
                            android:backgroundTint="@color/purple_primary"
                            android:textColor="@android:color/white"
                            android:layout_marginBottom="8dp"/>

                        <Button
                            android:id="@+id/endTaskButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Task"
                            android:visibility="gone"
                            android:backgroundTint="@color/purple_primary"
                            android:textColor="@android:color/white"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>