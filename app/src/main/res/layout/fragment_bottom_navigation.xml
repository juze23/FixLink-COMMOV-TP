<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_secondary"
    android:elevation="8dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- My Tasks -->
        <LinearLayout
            android:id="@+id/nav_my_tasks"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_my_tasks"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_tasks"
                app:tint="#666666" />

            <TextView
                android:id="@+id/text_my_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_my_tasks"
                android:textColor="#666666"
                android:textSize="10sp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Issues -->
        <LinearLayout
            android:id="@+id/nav_issues"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_issues"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_issues_outline"
                app:tint="#666666" />

            <TextView
                android:id="@+id/text_issues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_issues"
                android:textColor="#666666"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Maintenance -->
        <LinearLayout
            android:id="@+id/nav_maintenance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_maintenance"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_maintenace_outline"
                app:tint="#666666" />

            <TextView
                android:id="@+id/text_maintenance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_maintenance"
                android:textColor="#666666"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:id="@+id/nav_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/icon_profile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_profile_outline"
                app:tint="#666666" />

            <TextView
                android:id="@+id/text_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_profile"
                android:textColor="#666666"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>